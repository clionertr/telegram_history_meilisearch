; Telegram 中文历史消息便捷搜索 - 配置文件示例
; 请根据您的实际环境修改配置并保存为 config.ini

[MeiliSearch]
; MeiliSearch服务配置
HOST = http://localhost:7700
API_KEY = your_meilisearch_api_key_here

[Telegram]
; Telegram相关配置
; 以下配置也可以通过环境变量设置
; API_ID = your_api_id_here
; API_HASH = your_api_hash_here
; BOT_TOKEN = your_bot_token_here
SESSION_NAME = userbot

[General]
; 常规配置
CACHE_DIR = cache
LOG_LEVEL = INFO
; 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL

; 其他可自定义的配置项
; MAX_SYNC_MESSAGES = 1000  ; 同步历史消息时的最大消息数
; SYNC_OLDER_THAN_DAYS = 7  ; 只同步多少天前的消息
; MAX_RESULTS_PER_PAGE = 5  ; 每页显示的搜索结果数量